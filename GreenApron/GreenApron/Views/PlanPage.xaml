<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenApron.PlanPage"
             Title="{Binding Meal}">
  <ContentPage.Content>
    <ScrollView>
      <StackLayout>
        <Label Text="{Binding RecipeName}" HorizontalOptions="Center" />
        <Label Text="{Binding Recipe.preparationMinutes,
             StringFormat='Prep Time: {0:F0} minutes'}" />
        <Label Text="{Binding Recipe.cookingMinutes,
             StringFormat='Cook Time: {0:F0} minutes'}" />
        <Image Source="{Binding Recipe.image}" />
        <Label Text="{Binding Recipe.sourceName,
             StringFormat='Source: {0:F0}'}" />
        <Label Text="{Binding Recipe.instructions,
             StringFormat='Instructions: {0:F0}'}" />
        <Button Text="I Cooked It!" TextColor="White" BackgroundColor="#77D065" Clicked="OnCookedClicked" />
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>