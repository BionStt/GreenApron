<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GreenApron.GroceryItemDetailModal"
             Title="Grocery Item Detail">
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand">
      <Slider Minimum="0" Maximum="500" x:Name="slider" Value="{Binding Amount, Mode=TwoWay}" />
      <StackLayout Orientation="Horizontal">
        <Label Text="Amount: " HorizontalOptions="Start" />
        <Entry BindingContext="{x:Reference slider}" Text="{Binding Value}" HorizontalOptions="FillAndExpand" Keyboard="Numeric" />
        <Stepper BindingContext="{x:Reference slider}" Value="{Binding Value}" HorizontalOptions="FillAndExpand" />
        <Label Text="{Binding Unit}" HorizontalOptions="End" />
      </StackLayout> 
      <StackLayout Orientation="Horizontal">
        <Label Text="Purchased" />
        <Switch IsToggled="{Binding Purchased}" />
      </StackLayout>
      <Label Text="Actions" />
      <Button Text="Update" Clicked="OnUpdateClicked" TextColor="White" BackgroundColor="#00DE0E" />
      <Button Text="Delete" Clicked="OnDeleteClicked" TextColor="White" BackgroundColor="#00DE0E" />
      <Button Text="Cancel" Clicked="OnCancelClicked" TextColor="White" BackgroundColor="#00DE0E" />
    </StackLayout>
  </ContentPage.Content>
</ContentPage>